{
	"parser": "babel-eslint",
	"env": {
		"browser": false,
		"node": true,
		"commonjs": false,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"ecmaFeatures": {
			"impliedStrict": true
		}
	},
	"rules": {
		"semi": "error",
		"no-undef": "off",
		"no-unused-vars": "warn"
	}
}
